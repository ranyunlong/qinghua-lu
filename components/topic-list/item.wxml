<!--components/topic-list/item.wxml-->
<view class='topic-list-item' catchtap='onTapSelect'>
  <view class='header'>
    <text catchtap='onTapToptic'>#{{data.topic_name}}#</text>
    <button catchtap='onTapFollow' size='mini'>{{data.collected ? '+关注' : '已关注'}}</button>
  </view>
  <text class='content'>{{data.title}}</text>
  <view class='footer'>
    <text>{{data.source_name}}</text>
    <text>{{data.pub_time_str}}</text>
  </view>
</view>
