/* pages/mine/index.wxss */

.page {
  display:  flex;
  height: 100vh;
  flex-direction: column;
  background: #f2f2f2;
}

.list-group {
  background: #f2f2f2;
  flex: 1;
  position: relative;
  top: -76rpx;
}

.info {
  height: 400rpx;
  background: #17AFF8;
}

.info .login-box {
  width: inherit;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info .login-box button {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #807e7e;
  font-size: 36rpx;
  margin-top: -50rpx;
  box-shadow: 0 3px 5px -1px rgba(0,0,0,.2), 0 6px 10px 0 rgba(0,0,0,.14), 0 1px 18px 0 rgba(0,0,0,.12);
}

.info .info-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info .info-box .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 10rpx solid #fff;
}

.info .info-box .nickName {
  font-size: 36rpx;
  padding: 20rpx;
  color: #fff;
}

.info .info-box .progress{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info .info-box .progress progress {
  width: 300rpx;
}

.info .info-box .progress text {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  padding: 10rpx;
}