/* pages/index/detail/index.wxss */

.page {
  display: flex;
  flex-direction: column;
}

.header {
  font-size: 30rpx;
  color: #666;
  border-bottom: 1rpx solid #aaa;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}

.header .soure {
  display: flex;
}

.header .soure image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 15pt;
  font-weight: bold;
  line-height: 23pt;
  margin: 20rpx;
}

.content {
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.content image {
  padding: 10rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.content text {
  padding: 20rpx 0;
  line-height: 60rpx;
  text-indent: 36rpx;
  color: #2a2a2a;
}

.recommend {
  border-top: 35rpx solid #efefef;
}

.recommend .panel{
  padding: 0 20rpx;
}

home-detail-bar {
  width: 100vw;
  position: fixed;
  bottom: 0;
  z-index: 1;
}